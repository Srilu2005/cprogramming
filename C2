#include <stdio.h>

int main()
{

    int Num, revNum = 0, remainder;

    printf("Enter the number to reverse: ");

    scanf("%d", &Num);    

    while (Num != 0){

        remainder = Num % 10;

        revNum = revNum * 10 + remainder;

        Num = Num/10;

    }    

    printf("The reversed number is: %d", revNum);

    return 0;

}
